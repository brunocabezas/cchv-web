@import './variables.styl';

.pageTitleText
  color: $blue;

.page
  // To display loader
  min-height: 100vh;
  page_padding(0);
  max-width: $boxed_content_max_width;
  margin: 0 auto;

  &.singlePostPage
    padding-top: 2em;

  .pageTitle
    display: flex;
    align-items: center;

    @media (max-width: $sm)
      padding: 10px;

    .pageTitleText
      flex: 1;
      @media (max-width: $sm)
        margin 10px 0

  .pageRow
    display: flex;

    @media (max-width: $sm)
      padding: 10px;

    &:not(.schoolProgramTabsTitle)
      @media (max-width: $md)
        flex-direction: column;

    .pageLeft, .pageRight
      width: 50%;

      @media (max-width: $md)
        width: 100%;
        margin: 0;

  // Used to render html from WYSYWIG editors
  .pageBody
    img
      display: block;
      max-width: 100%;
      margin: 0 auto;

  hr
    color: $blue;