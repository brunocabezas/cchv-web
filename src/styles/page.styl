@import './variables.styl';

.pageTitleText
  color: $blue;

.page
  position: relative;
  min-height: 100vh;
  page_padding(0);
  max-width: $boxed_content_max_width;
  margin: 0 auto;

  @media (max-width: $md)
    min-height: 300px;

  .pageTitle
    display: flex;
    align-items: center;

    @media (max-width: $md)
      padding: 10px 0;
      margin: 0 10px;

    .pageTitleText
      flex: 1;

      @media (max-width: $md)
        margin: 10px 0 0 0;
        padding: 0;

  .pageRow
    display: flex;

    @media (max-width: $md)
      padding: $mobile_padding;

    &:not(.schoolProgramTabsTitle)
      @media (max-width: $md)
        flex-direction: column;

    .pageLeft, .pageRight
      width: 50%;

      @media (max-width: $md)
        width: 100%;
        margin: 0;

    &.pageRow--with-media
      @media (max-width: $md)
        padding: 0;

    .pageTitle
      @media (max-width: $md)
        margin: 0;

  // Used to render html from WYSYWIG editors
  .pageBody
    img
      display: block;
      max-width: 100%;
      margin: 0 auto;

  hr
    color: $blue;
