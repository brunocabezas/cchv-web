@import './variables.styl';

.pageTitleText
  font-size: 45px;
  color: $blue;

.page
  // To display loader
  min-height: 100vh;
  padding: 3em 5em 2em 5em;
  box-sizing: border-box;
  max-width: $boxed_content_max_width;
  margin: 0 auto;

  .pageTitle
    display: flex;
    align-items: center;

    .pageTitleText
      flex: 1;

  .pageRow
    display: flex;

    .pageLeft, .pageRight
      width: 50%;

  // Used to render html from WYSYWIG editors
  .pageBody
    img
      display: block;
      max-width: 100%;
      margin: 0 auto;

  hr
    color: $blue;