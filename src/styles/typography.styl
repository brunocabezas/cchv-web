@import './variables.styl';

// Title and headings font
@font-face
  font-family: NoeDisplay;
  font-style: bold;
  src: url('../assets/fonts/Noe Display/Noe-Display-Bold.ttf');

// Body font
@font-face
  font-family: NoticiaText;
  font-style: normal;
  src: url('../assets/fonts/Noticia Text/NoticiaText-Regular.ttf');

// Navigation menu font
@font-face
  font-family: Montserrat;
  src: url('../assets/fonts/Montserrat/Montserrat-Medium.otf');

*
  font-family: NoticiaText;
  line-height: 1.3em;

h1, h2, h3, h4, h5, h6
  font-family: NoeDisplay;
  color: $blue;

body
  font-family: NoticiaText;
