
@import '../../../styles/variables.styl';

.footer
  .footerTitle
    color: $blue;
    font-family: Montserrat;

  .footerTop
    background-color: $grey;
    padding: $footer_padding;
    display: flex;

    .footerTopSection
      margin: 1em;

      &.contactMail
        position: relative;
        width: 25%;

        a
          font-size: 18px;
          margin-top: 2em;
          display: block;
          font-family: Montserrat;

      &.socialNetworks
        position: relative;
        width: 25%;

      &.suscribeForm
        position: relative;
        width: 50%;

    .footerListItem
      font-family: Montserrat;
      margin: 20px 0;

      a
        font-family: Montserrat;
        text-decoration: none;
        color: inherit;

        &:hover
          text-decoration: underline;

  .footerSponsors
    padding: $footer_padding;
    background-color: $black;
    min-height: 300px;