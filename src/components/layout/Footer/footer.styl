
@import '../../../styles/variables.styl';

.footer
  .footerTitle
    color: $blue;
    font-family: Montserrat;

  .footerTop
    background-color: $grey;
    padding: $home_padding;
    display: flex;

    .footerTopSection
      margin: 1em;

      &.socialNetworks
        position: relative;

    .footerListItem
      font-family: Montserrat;
      margin: 20px 0;

      a
        font-family: Montserrat;
        text-decoration: none;
        color: inherit;

        &:hover
          text-decoration: underline;

  .footerSponsors
    padding: $home_padding;
    background-color: $black;
    min-height: 300px;