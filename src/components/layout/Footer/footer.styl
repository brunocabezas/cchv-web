
@import '../../../styles/variables.styl';

.footer
  .footerTitle
    color: $blue;
    font-family: Montserrat;

  .footerTop
    background-color: $grey;
    padding: $footer_padding;
    display: flex;
    justify-content: space-between;

    .footerTopSection
      margin: 1em;

      &.contactMail
        position: relative;
        max-width: 170px;

        a
          font-size: 18px;
          margin-top: 2em;
          display: block;
          font-family: Montserrat;

      &.socialNetworks
        position: relative;
        flex: 1;
        max-width: 250px;

      &.suscribeForm
        position: relative;
        min-width: 565px;
        margin-left: 2em;

    .footerListItem
      font-family: Montserrat;
      margin: 20px 0;

      a
        font-family: Montserrat;
        text-decoration: none;
        color: inherit;

        &:hover
          text-decoration: underline;

  .footerSponsors
    padding: $footer_padding;
    background-color: $black;
    min-height: 300px;